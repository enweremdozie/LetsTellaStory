<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.letstellastory.android.letstellastory">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/letstellastory_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartAStory"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Story"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Story_Grid"
            android:screenOrientation="portrait" />
        <activity
            android:name=".theStories"
            android:screenOrientation="portrait" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".ChatDialogsActivity" />
        <activity android:name=".ListUsersActivity" />
        <activity android:name=".UserProfile"></activity>
    </application>

</manifest>