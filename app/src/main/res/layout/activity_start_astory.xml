<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.letstellastory.android.letstellastory.StartAStory">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name your story"
        android:textSize="20dp"
        android:padding="15dp"
        />

    <EditText
        android:id="@+id/storyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:maxLength="40"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre"
        android:paddingLeft="15dp"
        android:textSize="20dp"
        android:paddingBottom="10dp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingBottom="20dp">
            <RadioButton
                android:id="@+id/Drama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drama"
                android:textSize="15dp"
                android:paddingRight="10dp"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/Horror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horror"
                android:textSize="15dp"
                android:paddingRight="10dp"/>
            <RadioButton
                android:id="@+id/Romance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Romance"
                android:textSize="15dp"
                android:paddingRight="10dp"/>
        </RadioGroup>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Story length"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingBottom="20dp">
            <RadioButton
                android:id="@+id/Short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 Pages"
                android:textSize="15dp"
                android:paddingRight="10dp"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 Pages"
                android:textSize="15dp"
                android:paddingRight="10dp"/>
            <RadioButton
                android:id="@+id/Long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200 pages"
                android:textSize="15dp"
                android:paddingRight="10dp"/>
        </RadioGroup>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let a friend start your story"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:textSize="20dp"/>

    <CheckBox
        android:id="@+id/PassaStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:text="Pass a start"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="cancel"
        android:textSize="20dp"
        android:padding="30dp"
        android:clickable="true"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="ok"
        android:textSize="20dp"
        android:padding="30dp"
        android:clickable="true"
        android:layout_weight="1"/>



</LinearLayout>




</LinearLayout>