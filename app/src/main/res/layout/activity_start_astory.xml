<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.letstellastory.android.letstellastory.StartAStory">


<LinearLayout
    android:id="@+id/first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/story_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Story name"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"/>

    <EditText
        android:id="@+id/storyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:maxLength="40"
       android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/genreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/storyName"/>

    <RadioGroup
        android:id="@+id/radGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp">
        <RadioButton
            android:id="@+id/Drama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drama"
            android:textSize="15dp"
            android:paddingRight="10dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/Horror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horror"
            android:textSize="15dp"
            android:paddingRight="10dp"/>
        <RadioButton
            android:id="@+id/Romance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Romance"
            android:textSize="15dp"
            android:paddingRight="10dp"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Story length"
        android:paddingLeft="10dp"
        android:textSize="20dp"/>

    <RadioGroup
        android:id="@+id/length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp">

        <RadioButton
            android:id="@+id/Short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 Pages"
            android:textSize="15dp"
            android:paddingRight="10dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 Pages"
            android:textSize="15dp"
            android:paddingRight="10dp"/>
        <RadioButton
            android:id="@+id/Long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 pages"
            android:textSize="15dp"
            android:paddingRight="10dp"/>
    </RadioGroup>


    <!--TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let a friend start your story"
        android:paddingLeft="15dp"
        android:textSize="20dp"/-->

    <!--CheckBox
        android:id="@+id/PassaStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:text="Pass a start"/-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="40dp"
        android:gravity="bottom"
        android:padding="10dp">




        <Button
            android:id="@+id/cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="cancel"
            android:textSize="20dp"
            android:textColor="#FAFAFA"
            android:background="@layout/rounded_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/ok"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="ok"
            android:textSize="20dp"
            android:textColor="#FAFAFA"
            android:background="@layout/rounded_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>



         </LinearLayout>

    </LinearLayout>

</RelativeLayout>